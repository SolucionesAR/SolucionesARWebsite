@using SolucionesARWebsite.ModelsWebsite.Views.Roles

@model IndexViewModel

@{
    ViewBag.Title = "SolucionesAR | Roles";
    Layout = "~/Views/Shared/TableLayout.cshtml";
}

@section Messages {
}

@section ListTitle {
    TIENDAS
}

@section ListActions {
    @if (Model.RolesList.HasFilters())
    {
        @Html.ActionLink("Mostrar Todo", "Index", null, new { @class = "button" } )
    }
        @Html.ActionLink("Nuevo Rol", "Create", null, new { @class = "button" })
    }
}

@section ListContent {
    <div class="entry jspScrollable">
        <div class="table_style">
            <table>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Nombre
                    </th>
                    <th>
                        Acciones
                    </th>
                </tr>

                @foreach (var item in Model.RolesList.Items) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.RolId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "Edit", new { id = item.RolId }) |
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.RolId })
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
}

