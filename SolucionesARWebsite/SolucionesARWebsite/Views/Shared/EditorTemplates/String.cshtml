<span>
    @Html.Label(ViewData.ModelMetadata.DisplayName)
    @Html.TextBox(
        string.Empty, 
        ViewData.TemplateInfo.FormattedModelValue, 
        new
            {
                placeholder = ViewData.ModelMetadata.Watermark,
                required = ViewData.ModelMetadata.IsRequired ? string.Empty : ViewData.ModelMetadata.IsRequired.ToString().ToLower(),
                type = ViewData.ModelMetadata.DataTypeName,
            })
</span>