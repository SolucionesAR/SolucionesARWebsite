@using SolucionesARWebsite.ViewModels.Views.Districts

@model IndexViewModel


@{
    ViewBag.Title = "SolucionesAR | Distritos";
    Layout = "~/Views/Shared/TableLayout.cshtml";
}

@section Messages {
}

@section ListTitle {
    CANTONES
}

@section ListActions {
    @if (Model.DistrictsList.HasFilters())
    {
        @Html.ActionLink("Mostrar Todo", "Index", null, new { @class = "button" } )
    }
        @Html.ActionLink("Nuevo Distrito", "Create", null, new { @class = "button" })
    }
}

@section ListContent {
    <div class="entry jspScrollable">
        <div class="table_style">
            <table>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Nombre
                    </th>
                    <th>
                        Canton
                    </th>
                    
                    <th></th>
                </tr>

                @foreach (var item in Model.DistrictsList.Items) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DistrictId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CantonId)
                        </td>
                        
                        <td>
                            @Html.ActionLink("Editar", "Edit", new { id = item.DistrictId }) |
                            @Html.ActionLink("Detalles", "Details", new { id = item.DistrictId }) 
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
}

