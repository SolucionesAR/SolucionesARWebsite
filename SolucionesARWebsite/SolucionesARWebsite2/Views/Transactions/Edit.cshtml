
@using SolucionesARWebsite2.Helpers
@using SolucionesARWebsite2.ViewModels.Transactions

@model EditViewModel

@{
    ViewBag.Title = "SolucionesAR | Ventas";
    Layout = "~/Views/Shared/EditionLayout.cshtml";
}


@section Header {
    @if (Model.TransactionId > 0)
    {
        <h1>EDITAR VENTA</h1>
    }
    else
    {
        <h1>NUEVA VENTA</h1>
    }
}

@section Messages {
    @Html.ValidationSummary()
}

@section EditionContent {
    <div class="entry jspScrollable">
        <div class="jspContainer">
            <div class="jspPane">
                @using (Html.BeginForm("Save", "Transactions"))
                {
                    @Html.HiddenFor(model => model.TransactionId)
                    <fieldset>
                        @Html.EditorFor(model => model.BillBarCode)
                        @Html.EditorFor(model => model.Amount)
                        Porcentaje de comision %<br/>
                        <input type="text" id="ComisionPercentage"/>
                        @Html.EditorFor(model => model.Comision)
                        <span>
                            @Html.LabelFor(model => model.Points) <br/>
                            @Html.EditorFor(model => model.Points)
                        </span>
                    </fieldset>
                    <fieldset>
                        @* <span>
                            @Html.LabelFor(model => model.SalesMan) <br/>
                            @Html.DropDownListForSalesManList(model => model.SalesMan.UserId)
                        </span>*@
                        <span>
                                
                            @Html.EditorFor(model => model.TransactionDate)
                        </span>
                        <span>
                            @Html.LabelFor(model => model.Customer) <br/>
                            @Html.DropDownListForCustomersListToShow(model => model.Customer.UserId)
                        </span>
                        <span>
                            @Html.LabelFor(model => model.Company) <br/>
                            @Html.DropDownListForCompaniesList(model => model.Company.CompanyId)
                        </span>
                    </fieldset>
                            
                    <br/><br/>
                    <input name="submit" type="submit" value="Guardar">
                }
            </div>
        </div>
    </div>
}