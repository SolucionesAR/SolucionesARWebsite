@using PagedList.Mvc; 
 
@using SolucionesARWebsite2.ViewModels.Reports

@model IndexViewModel

@{
    ViewBag.Title = "SolucionesAR | Reportes";
    Layout = "~/Views/Shared/TableLayout.cshtml";
}

@section Messages {
}

@section ListTitle {
    Reportes
}

@section ListPaging {
    @{      
        @Html.PagedListPager(Model.PagedItems,
            page => Url.Action("Index", new RouteValueDictionary {
               { "Page", page },
               { "EmailAddress", Model.EmailAddress },
               { "LastName", Model.LastName }
            }),
            PagedListRenderOptions.OnlyShowFivePagesAtATime)
    }   
}

@section ListActions {
}

@section ListContent {
    <div class="entry jspScrollable">
        <div class="table_style">
            <table>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Reporte
                    </th>
                    <th>
                        Acciones
                    </th>
                </tr>

                @foreach (var item in Model.PagedItems)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.ActionLink("Generar", item.Action) 
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
}