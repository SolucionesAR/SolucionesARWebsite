@using SolucionesARWebsite2.ViewModels.Views.Inventory
@using SolucionesARWebsite2.Helpers

@model UploadViewModel

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/EditionLayout.cshtml";
}

@section Messages {

}


@section EditionContent {
    <div class="edition_content content_box ">
        
        <h1>REPORTAR VENTAS</h1>

        <div class="entry jspScrollable">
            <p class="note">Favor complete el siguiente formulario</p>
            <div class="jspContainer" style="width: 960px; height: 400px;">
                <div class="jspPane" style="padding: 15px 25px 0px; top: 0px;">
                    @using (Html.BeginForm("Upload", "Inventory"))
                    {
                        <fieldset>
                            <span>
                                Html.LabelFor(model => model.Company) <br/>
                                Html.DropDownListForCompanieslList(model => model.Company.CompanyId)
                            </span>
                        </fieldset>
                            
                        <input name="submit" type="submit" value="Submit">
                    }
                </div>
            </div>
        </div>
    </div>
}
