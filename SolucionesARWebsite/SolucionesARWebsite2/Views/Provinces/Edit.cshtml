@using SolucionesARWebsite2.ViewModels.Provinces

@model EditViewModel

@{
    ViewBag.Title = "SolucionesAR | Provincias";
    Layout = "~/Views/Shared/EditionLayout.cshtml";
}

@section Messages {

}


@section EditionContent {
    @if (Model.ProvinceId > 0)
    {
        <h1>EDITAR PROVINCIA</h1>
    }
    else
    {
        <h1>NUEVA PROVINCIA</h1>
    }
    
    <p class="note">Favor complete el siguiente formulario</p>
    @using (Html.BeginForm("Save", "Provinces"))
    {
        @Html.HiddenFor(model => model.ProvinceId)

        <fieldset>
            @Html.EditorFor(model => model.ProvinceName)
        </fieldset>
                            
        <input name="submit" type="submit" value="Submit">
    }
}

