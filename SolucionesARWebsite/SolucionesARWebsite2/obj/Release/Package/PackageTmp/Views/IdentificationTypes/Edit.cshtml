@using SolucionesARWebsite2.ViewModels.IdentificationTypes

@model EditViewModel

@{
    ViewBag.Title = "SolucionesAR | Tipos de Identificaciones";
    Layout = "~/Views/Shared/EditionLayout.cshtml";
}

@section Header {
    @if (Model.IdentificationTypeId > 0)
    {
        <h1>EDITAR TIPO DE IDENTIFICATION</h1>
    }
    else
    {
        <h1>NUEVO TIPO DE IDENTIFICATION</h1>
    }
}

@section Messages {
    @Html.ValidationSummary()
}

@section EditionContent {
    @using (Html.BeginForm("Save", "IdentificationTypes"))
    {
        @Html.HiddenFor(model => model.IdentificationTypeId)

        <fieldset>
            @Html.EditorFor(model => model.Description)
        </fieldset>
                            
        <input name="submit" type="submit" value="Submit">
    }
}

