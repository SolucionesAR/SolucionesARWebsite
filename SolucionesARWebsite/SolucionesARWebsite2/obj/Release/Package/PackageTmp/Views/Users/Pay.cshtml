@using SolucionesARWebsite2.Helpers
@using SolucionesARWebsite2.ViewModels.Users

@model PayViewModel

@{
    ViewBag.Title = "SolucionesAR | Pagar";
    Layout = "~/Views/Shared/EditionLayout.cshtml";
}

@section Header {
    <h1>PAGAR USUARIO</h1>
    <div class="entry" style="overflow: hidden; padding: 0px; width: 410px; height: 80px;">
        <div class="jspContainer" style="width: 410px; height: 80px;">
            <div class="jspPane" style="padding: 15px 25px 0px; top: 0px; width: 200px;">
                <h3>Usuario: <span>@Model.FName @Model.LName1 @Model.LName2 (@Model.IdentificationNumber) </span></h3>
                <h3>Cashback: <span>@Model.LastCashback  </span></h3>
            </div>
        </div>
    </div>
}

@section Messages {
    @Html.ValidationSummary()
}


@section EditionContent {
    <div class="entry jspScrollable">
        <div class="jspContainer">
            <div class="jspPane">
                @using (Html.BeginForm("SavePayment", "Users"))
                {
                    @Html.HiddenFor(model => model.UserId)
                    @Html.HiddenFor(model => model.LastCashback)
                    @Html.HiddenFor(model => model.LName1)
                    @Html.HiddenFor(model => model.LName2)
                    @Html.HiddenFor(model => model.FName)
                    <fieldset>
                        @Html.EditorFor(model => model.Cashback)
                    </fieldset>
                
                    <div class="main-actions">
                        <input name="submit" type="submit" value="Guardar">
                    </div>
                }
            </div>
        </div>
    </div>
}