<span>
    @Html.Label(ViewData.ModelMetadata.DisplayName)
    @Html.TextBox(
        string.Empty,
        ((DateTime)ViewData.TemplateInfo.FormattedModelValue).ToString("dd/MM/yyyy"),
        new
            {
                placeholder = ViewData.ModelMetadata.Watermark, 
                required = ViewData.ModelMetadata.IsRequired, 
                type = "date"
            })
</span>